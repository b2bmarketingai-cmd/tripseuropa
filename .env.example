# ===================================
# TRIPS EUROPA - Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values

# -----------------
# Application
# -----------------
NODE_ENV=production
PORT=5000

# -----------------
# Database
# -----------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/tripseuropa

# -----------------
# Authentication (Replit Auth)
# -----------------
# These are automatically provided by Replit
# REPLIT_DB_URL=<auto-provided>
# REPL_ID=<auto-provided>
# REPL_OWNER=<auto-provided>

# -----------------
# Email Service (Resend)
# -----------------
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email addresses for notifications
CONTACT_EMAIL=contacto@tripseuropa.com
ADMIN_EMAIL=admin@tripseuropa.com

# -----------------
# Flight Search API (Amadeus)
# -----------------
# ⚠️ CRITICAL: Currently using MOCK data
# Register at https://developers.amadeus.com/register
# See FLIGHT_API_INTEGRATION.md for implementation guide

AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_HOSTNAME=test  # Use "production" for live data

# -----------------
# AI Services
# -----------------
# OpenAI API for chatbot and content generation
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Perplexity API for SEO research
# Get your API key from https://www.perplexity.ai/
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------
# Translation Service
# -----------------
# Currently using OpenAI for translations
# You can configure alternative services here

# -----------------
# Image Generation (Optional)
# -----------------
# For generating custom destination images
# Uses OpenAI DALL-E by default

# -----------------
# Analytics & Monitoring (Optional)
# -----------------
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# -----------------
# Security
# -----------------
# Session secret for authentication
SESSION_SECRET=your-very-long-random-secret-here-change-in-production

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://tripseuropa.com,https://www.tripseuropa.com

# -----------------
# External Services (Optional)
# -----------------
# Trustpilot
TRUSTPILOT_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe (for payments - future implementation)
STRIPE_PUBLIC_KEY=your_stripe_public_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# WhatsApp Business API (optional)
WHATSAPP_PHONE_NUMBER=+34912345678
WHATSAPP_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -----------------
# Development Only
# -----------------
# Set to true to enable debug logging
DEBUG=false

# Disable email sending in development
DISABLE_EMAILS=false

# Use mock data for external APIs in development
USE_MOCK_DATA=false
